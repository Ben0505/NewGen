<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.l31005.newgen.PopUpLogin"
    android:background="#dedede"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userPic"
        android:src="@drawable/user_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userPic"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile: (+65)"
        android:textSize="20dp"
        android:id="@+id/userIdTextView"
        android:layout_marginTop="220dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userIdTextField"
        android:inputType="number"
        android:layout_toRightOf="@+id/userIdTextView"
        android:ems="10"
        android:layout_marginTop="210dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="20dp"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/userIdTextView"
        android:layout_marginTop="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextField"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_toRightOf="@+id/passwordTextView"
        android:layout_below="@+id/userIdTextField"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="italic"
        android:id="@+id/forgotPass"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/passwordTextField"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="LOGIN"
        android:textSize="18dp"
        android:id="@+id/login"
        android:layout_below="@id/forgotPass"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="CREATE ACCOUNT"
        android:textSize="18dp"
        android:id="@+id/createAccBtn"
        android:layout_below="@id/login"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="CANCEL"
        android:textSize="18dp"
        android:id="@+id/cancel"
        android:layout_below="@id/createAccBtn"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
